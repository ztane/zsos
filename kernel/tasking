#ifndef TASKING_H
#define TASKING_H

class TSSContents{
public:
	unsigned short backlink, __blh;
       	unsigned int   esp0;
	unsigned short ss0, __ss0h;
        unsigned int   esp1;
	unsigned short ss1, __ss1h;
        unsigned int   esp2;
	unsigned short ss2, __ss2h;
	unsigned int   cr3;
	unsigned int   eip;
	unsigned int   eflags;
	unsigned int   eax, ecx, edx, ebx;
       	unsigned int   esp, ebp, esi, edi;
       	unsigned short es, __esh;
        unsigned short cs, __csh;
        unsigned short ss, __ssh;
        unsigned short ds, __dsh;
        unsigned short fs, __fsh;
        unsigned short gs, __gsh;
	unsigned short ldt, __ldth;
	unsigned short trace, bitmap;

	void setup();
} __attribute__((packed));

class Process;
class Process {
protected:
public:
	enum ProcessState {
		READY,
		RUNNING,
		WAITING
	};

protected:
	unsigned int esp;    //actual position of esp
        unsigned int kstack; //stacktop of kernel stack
        unsigned int ustack; //stacktop of user stack
        unsigned int cr3;

	char name[32];
	unsigned int padding;
	unsigned char kernel_stack[4096];
	unsigned int padding2;
	unsigned char user_stack[4096];

	ProcessState current_state;
	int current_priority;
	Process *next;
	Process *previous;
	int timeslice;

public:
	Process(char *name);
	
	void initialize(void *entry_point);
	void dispatch();

	ProcessState getCurrentState() {
		return current_state;
	}

	void setCurrentState(ProcessState new_state) {
		current_state = new_state;	
	}

	int getCurrentPriority() {
		return current_priority;
	}

	void setCurrentPriority(int priority) {
		current_priority = priority;
	}

	Process *getNext() {
		return next;
	}

	void setNext(Process *n) {
		next = n;
	}

	Process *getPrevious() {
		return previous;
	}

	void setPrevious(Process *p) {
		previous = p;
	}

	friend class Scheduler;
};



extern TSSContents TSS_Segment;

#endif
