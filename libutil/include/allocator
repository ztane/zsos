#ifndef __ALLOCATOR_INCLUDED__
#define __ALLOCATOR_INCLUDED__

#include <stdlib.h>

class Allocator {
public:
	virtual ~Allocator() { };

	virtual void *allocate(size_t size) = 0;
	virtual void release(void *ptr)     = 0;
};

void *operator new(long unsigned int size, Allocator& alloc);
void *operator new[] (long unsigned int size, Allocator& alloc);

#endif
